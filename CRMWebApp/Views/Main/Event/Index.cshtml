
@{
    ViewData["Title"] = "Event List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="card" ng-app="CRMApp" ng-controller="EventController" ng-init="GetAll()">
    <div class="container-fluid px-4">
        <h1 class="mt-4">Event</h1>
        <div class="row">
            <div class="col-6 pr-3 pl-3 text-right">
                <a href="/Event/Create" class="btn btn-success" type="button"><i class="fas fa-plus-circle"></i>&nbsp;Add</a>
                <button title="Export To Excel" ng-click="ExportToExcel()" class="btn btn-primary" type="button"><i class="fas fa-file-excel"></i>&nbsp;Export</button>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                    <tr>
                        <th>Topic</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Description</th>
                        <th>Start Date </th>
                        <th>Start Time</th>
                        <th>End Date</th>
                        <th>End Time</th>
                        <th>Customer</th>
                        <th style="width:10%">Action</th>
                    </tr>
                </thead>

                <tbody style="background-color:white;">
                    <tr ng-repeat="item in AllDataList">
                        <td>
                            <span class="table-data-font">{{item.topic}}</span><br />
                        </td>
                        <td>
                            <span class="table-data-font">{{item.type}}</span><br />
                        </td>
                        <td>
                            <span class="table-data-font">{{item.status}}</span><br />
                        </td>
                        <td>
                            <span class="table-data-font">{{item.des}}</span><br />
                        </td>
                        <td>
                            <span class="table-data-font">{{item.start_date | date: 'dd/MMM/yyyy'}}</span><br />
                        </td>
                        <td>
                            <span class="table-data-font">{{item.start_time | date: 'HH:mm a'}}</span><br />
                        </td>
                        <td>
                            <span class="table-data-font">{{item.end_date | date: 'dd/MMM/yyyy'}}</span><br />
                        </td>
                        <td>
                            <span class="table-data-font">{{item.end_time | date: 'HH:mm a'}}</span><br />
                        </td>
                        <td>
                            <span class="table-data-font">{{item.contact_name}}</span><br />
                        </td>
                        <td>
                            <a href="/Event/Edit/{{item.event_id}}" class="btn btn-secondary" type="button"><i class="fas fa-edit"></i></a>
                            <a href="/Event/Delete/{{item.event_id}}" class="btn btn-danger" type="button"><i class="fas fa-trash"></i></a>
                        </td>

                    </tr>

                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="8" class="text-right" style=" padding-top: 1rem;">
                            <span>Rows per page:</span>
                            <select>
                                <option>10</option>
                                <option>25</option>
                                <option>50</option>
                                <option>100</option>
                            </select>
                        </td>
                        <td class="text-right" style=" padding-top: 1rem;">
                            1-10 of 276
                        </td>
                        <td class="text-right">
                            <button type="button" class="btn btn-flat btn-xs bg-transparent">
                                <i class="fas fa-angle-left mr-3"></i>
                            </button>
                            <button type="button" class="btn btn-flat btn-xs bg-transparent">
                                <i class="fas fa-angle-right"></i>
                            </button>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<script src="~/lib/angular.js/angular.js"></script>
<script src="~/js/angularservices/eventservice.js"></script>


